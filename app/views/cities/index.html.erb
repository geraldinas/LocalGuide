<center>

<div class="container-fluid">

<% if @guides.count == 0 %>
	<h1>No Guides Here Yet</h1>
<% else %>
	<div class="row">
	<h1>Showing Guides in:</h1>
	<%@guides.each do |guide|%>
	<div class="col-sm-4" style="background-color:white;"><h2><%= link_to(guide.name, guide_path(guide)) %></h2><%= image_tag(guide.image_url) %><%=guide.description%><%guide.activities.each do |activity|%><h4><%=activity.name%></h4><%end%></div>
	<%end%>
<%end%>
	<div style="width:200px;height:100px;border:1px solid black;border-radius:5px;">
</div>
</div>
</div>

</center>