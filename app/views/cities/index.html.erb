<center>
<% if @guides.count == 0 %>
	<h1>No Guides Here Yet</h1>
<% else %>
  <div class="row">
  <br><br><br>
	<h1>Showing Guides:</h1>

   <%@guides.each do |guide|%>
  <li class="list-group-item"><h2>
    <div class="guide_name">
        <%= guide.name%></ul></h2>
        <%= image_tag(guide.image_url)%>
  <div class="panel-body"></div>
   <div class="guide_description"> 
    <%=guide.description%>
    </div>
    <%guide.activities.each do |activity|%>
      <h3><%=activity.name%></h3>
    <%end%></li></ul></div>
	<%end%>

<%end%>
	 <div style="width:200px;height:100px;border:1px solid black;border-radius:5px;">
  </div>
</center>