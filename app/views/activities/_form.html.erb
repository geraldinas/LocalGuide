    <%= f.label :name%>
    <%= f.text_field :name%><br><br>
    <%= f.label :description %>
    <%= f.text_field :description %><br><br>
    <%= f.label :availability %>
    <%= f.text_field :availability %><br><br>
    <%= f.submit "submit" %>
<% end %>
</center>