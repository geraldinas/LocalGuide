<center>
  <%=form_for @activity do |f| %>
    <%= f.hidden_field :guide_id, :value => current_user.id%>
    <%= f.label :name%><br />
    <%= f.text_field :name%><br>
    <%= f.label :description %><br />
    <%= f.text_field :description %><br>
    <%= f.label :availability %><br />
    <%= f.text_field :availability %><br>

    <%= f.fields_for :locations, Location.new do |  builder| %>
      <%= render 'location_fields', f: builder %>
    <%end%>
    <%= link_to_add_fields "Add Location", f, :locations%>

    <div class='actions'>
      <%= f.submit "submit" %>
    </div>
  <% end %>  
</center>