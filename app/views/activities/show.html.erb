<center>
  <h1>Activity: <%= @activity.name %></h3>
  <h3>Description: <%= @activity.description %></h3>
  
  <h3>Location:  <% @activity.locations.each do |location|%>
      <%=location.name%><br>
      Address: <%=location.address%><br><br>
  <%end%>
    

    <%unless params[:trip_id] == nil %>   
      <%=form_for Tour.new do |f|%>   
        <%= f.hidden_field :activity_id, value: @activity.id%>
        <%= f.hidden_field :trip_id, value: params[:trip_id]%>
        <%= f.label :start_time %>
        <%= f.datetime_select :start_time%><br>
        <%= f.label :end_time %>
        <%= f.datetime_select :end_time%><br><br>
        <%= f.submit "Request Tour"%>
     <%end%>
  <%end%>

<div style='width: 800px;'>
    <div id="map" style='width: 800px; height: 500px;'></div>
</div>
  
  <%= link_to "Edit", edit_activity_path(@activity), :class => "btn btn-info btn-sm"%>
  <%= link_to "Back to Profile", profile_path, :class => "btn btn-info btn-sm"%> <br>

<script type="text/javascript">
  var rawMarkers = <%=raw @location_json.to_json %>;
</script>

</center>
