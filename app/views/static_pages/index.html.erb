<source src="http://bit.ly/1HUHkcF" type="video/webm">
<source src="//bit.ly/1HUHkcF" type="video/mp4">
</video>

  <p>
    <%= form_tag(search_path, :method => "get", class: "navbar-form") do %>
  <form id="searchbox" action=""> 
    <%= text_field_tag :search, params[:search], placeholder: "Search Places" %>
    <%= submit_tag "Search", :name => nil %>
    <% end %>
  </form>
  </p>

  <% if current_user == nil %>
    <%= link_to "Sign in with Facebook", "/auth/facebook", :class => "label label-primary"%>
  <% end %><br>

  <div class="col-lg-6">
    <div class="input-group">
      <input type="text" class="form-control" placeholder="Search for...">
      <span class="input-group-btn">
        <button class="btn btn-default" type="button">Go!</button>
      </span>
    </div><!-- /input-group -->
  </div><!-- /.col-lg-6 -->
</div><!-- /.row -->

 <div class="jumbotron">
