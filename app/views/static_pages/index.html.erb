<center>
  <% if flash[:notice] %>
    <%= flash[:notice] %>  
  <% end %>

  <nav class="navbar navbar-inverse navbar-fixed-top" style ='background-color: #99CCCC;'>
      <a class="navbar-brand" href="/" style = "font-family:Courier New;color:#333366">
        <b>Local Guide</b>
      </a>
  </nav>


  
  <h1>Welcome to Local Guide!</h1><br>
      <% if current_user == nil %>
        <%= link_to "Sign in with Facebook", "/auth/facebook", :class => "btn btn-info btn-sm"%>
      <% end %>

  <p>
    <%= form_tag(search_path, :method => "get", class: "navbar-form", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Places" %>
    <%= submit_tag "Search", :name => nil %>
    <% end %>
  </p>

</center>