<center>
  <% if flash[:notice] %>
    <%= flash[:notice] %>  
  <% end %>

  <nav class="navbar navbar-inverse navbar-fixed-top" style ='background-color: #99CCCC;'>
      <a class="navbar-brand" href="/" style = "font-family:Courier New;color:#333366">
        <b>Local Guide</b>
      </a>
  </nav>

  <video autoplay  poster="https://s3-us-west-2.amazonaws.com/s.cdpn.io/4273/polina.jpg" id="bgvid" loop>
  <!-- WCAG general accessibility recommendation is that media such as background video play through only once. Loop turned on for the purposes of illustration; if removed, the end of the video will fade in the same way created by pressing the "Pause" button  -->
<source src="//demosthenes.info/assets/videos/polina.webm" type="video/webm">
<source src="//demosthenes.info/assets/videos/polina.mp4" type="video/mp4">
</video>

  <h1>Welcome to Local Guide!</h1><br>
      <% if current_user == nil %>
        <%= link_to "Sign in with Facebook", "/auth/facebook", :class => "btn btn-info btn-sm"%>
      <% end %>

  <p>
    <%= form_tag(search_path, :method => "get", class: "navbar-form", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Places" %>
    <%= submit_tag "Search", :name => nil %>
    <% end %>
  </p>

</center>