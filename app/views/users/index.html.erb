<center>
<h1>Showing Guides in: <%=@trip.city.name%></h1>
	<%@users.each do |user|%>
		<h2><%= link_to(user.name, user_path(user)) %></h2>
		<b><%= link_to(image_tag(user.image_url),user_path(user)) %><br>	
			<%=user.description%><br></b>
	
			<%user.activities.each do |activity|%>
			<h4><%=activity.name%><br></h4>
			<b>Availability:</b> <%=activity.availability%>
	
		<%=form_for Tour.new do |f|%>
			<%= f.hidden_field :activity_id, value: activity.id%>
			<%= f.hidden_field :trip_id, value: @trip.id%>
			<%= f.label :start_time%>
			<%= f.time_field :start_time%><br>
			<%= f.label :end_time %>
			<%= f.time_field :end_time%><br><br>
			<%= f.submit "Request Tour"%>
		<%end%>
	<%end%>	
<%end%>
</center>