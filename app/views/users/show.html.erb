<div class="background-color">
<div class="container">
  <div class="row"><center><br><br><br>
      <legend><h1> <%=@user.name%></h1></legend></center>
  </div>
</div>

<div class="container">     
  <div class="row">
    <div class="col-md-5"><center>
      <p><%=render 'avatar'%></p></center>
    </div>

    <div class="col-md-7"><br><br><br>
      <h5><p> Resident of: </p></h5> <h4><p><b><%= current_user.city.name %></b></p></h4><br>
      <h5><p>Contact Info:</p></h5> <h4><p><b> <%= current_user.email %></h4></b></p><br>
      <h5><p> About: </p></h5> <h4><p><b> <%= current_user.description %></h4></b></p>
    </div>
  </div>
</div>

<br><br><br>

<div class="container">
  <div class="row"><center>
    <div class="col-md-6"><br><br>
      <h4><b>Tour Activities</b></h4>
      <% @user.activities.each do |activity| %>
          <p><%= link_to(activity.name, activity_path(activity)) %></p>
      <% end %>
    </div>

    <div class="col-md-6"><br>
      <p><%=render 'availability'%></p>
    </div>
  </div></center>

  

</div>
</div>