<center>
  <h1> <%=@user.name%>'s Profile</h1>
  <legend>Personal Info:</legend>
      
  <img src="<%= @user.image_url %>" height="72" weight="72">
  <p><h4><%= @user.name %></h4></p>
  <b>Location: </b><p><%= @user.city.name %></p>
  <b>Email: </b><%= @user.email %><br></p>


  <br><b>All activities <%=@user.name%> is Hosting:</b></br>
  <% @user.activities.each do |activity| %>
      <%= link_to(activity.name, activity_path(activity)) %>
  <% end %>
</center>

<div class="input-append date form_datetime" data-date="2012-12-21T15:25:00Z">
    <input size="16" type="text" value="" readonly>
    <span class="add-on"><i class="icon-remove"></i></span>
    <span class="add-on"><i class="icon-th"></i></span>
</div>
 
<script type="text/javascript">
    $(".form_datetime").datetimepicker({
        format: "dd MM yyyy - HH:ii P",
        showMeridian: true,
        autoclose: true,
        todayBtn: true
    });
</script>            