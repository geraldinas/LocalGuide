<div class="container">
  <div class="row"><center>
    <%=form_for @user do |f| %><br><br>
      <%= f.label :city_id, "Select your city" %>
      <%= f.collection_select :city_id, City.all, :id, :name %><br><br>
      <%= f.label :email, "Enter Email" %>
      <%= f.text_field :email %><br><br>
      
      <%= f.label :description, "Enter a Short Bio" %><br>
      <%= f.text_area :description %>
      <%= f.file_field :avatar %><br>
      <%= f.submit "Update Profile" %>
    <% end %>
  </div></center>
</div>