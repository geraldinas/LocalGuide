<legend><h1><center> Add a new trip </center></h1></legend><br><br>
  <%=form_for @trip do |f| %>
    <%= f.hidden_field :tourist_id, :value => current_user.id%>
    <h4><%= f.label :city_id, "Select your city" %></h4>
    <%= f.collection_select :city_id, City.all, :id, :name %><br>
    <br><br><h4><%= f.label :start_date, "Select a start date" %></h4>
    <%= f.date_field :start_date %><br>
    <br><br><h4><%= f.label :end_date, "Select an end date" %></h4>
    <%= f.date_field :end_date %><br><br>
    <%= f.submit "Add Trip", :class => "stephanie"%>
  <% end %>
