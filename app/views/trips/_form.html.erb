<center>
  <%=form_for @trip do |f| %>
    <%= f.hidden_field :tourist_id, :value => current_user.id%><br>
    <%= f.label :city_id, "Select your city" %>
    <%= f.collection_select :city_id, City.all, :id, :name %><br>
    <%= f.label :start_date, "Select a start date" %>
    <%= f.date_field :start_date %><br>
    <%= f.label :end_date, "Select an end date" %>
    <%= f.date_field :end_date %><br><br><br>
    <%= f.submit %>
  <% end %>
</center>