<center>
  <h1>Headed to: <%=@trip.city.name%></h1>
    Start date of trip: <%=@trip.start_date.to_formatted_s(:long_ordinal)%></p>
    End date of trip: <%=@trip.end_date.to_formatted_s(:long_ordinal)%><br>
  
  <h3>Tours for your Trip</h3>

  <%unless @trip.accepted_tours.empty?%> 
  <h3>Confirmed:</h3>
    <%@trip.accepted_tours.each do |tour| %>
       <b><%=tour.activity.name%></b>
        Start time of tour: <%=tour.start_time.to_formatted_s(:long_ordinal)%><br>
        End time of tour: <%=tour.end_time.to_formatted_s(:long_ordinal)%>
    <%end%>
  <%end%>

  <%unless @trip.pending_tours.empty?%>   
    <h3> Pending:</h3>
    <%@trip.pending_tours.each do |tour| %>
      <p><b><%=tour.activity.name%></b></p>
        Start time of tour: <%=tour.start_time.to_formatted_s(:long_ordinal)%><br>
        End time of tour: <%=tour.end_time.to_formatted_s(:long_ordinal)%>
    <%end%>
  <%end%>
  
  <% if @trip.start_date > Date.today %>
    <%= link_to "Find a Tour Guide", trip_guides_path(@trip)%>
  <%end%>
</center>